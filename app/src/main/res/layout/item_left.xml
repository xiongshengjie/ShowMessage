<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="200dp">

    <TextView
        android:id="@+id/general_time"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="match_parent"
        android:gravity="center"
        android:textSize="20sp" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="200dp"
        android:orientation="vertical"
        android:layout_weight="1">


        <View
            android:id="@+id/top_dash"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/dashed"/>


        <ImageView
            android:id="@+id/general_head"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:paddingLeft="20dp"
            android:paddingRight="20dp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/dashed"/>


    </LinearLayout>



    <LinearLayout
        android:layout_width="0dp"
        android:layout_weight="6"
        android:layout_height="match_parent"
        android:layout_marginTop="50dp"
        android:layout_marginBottom="50dp"
        android:background="@drawable/left_background">

        <TextView
            android:id="@+id/general_behave"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="5"
            android:textSize="20sp"
            android:layout_gravity="center_vertical"
            android:paddingLeft="30dp" />

        <TextView
            android:id="@+id/general_space_name"
            android:layout_width="0dp"
            android:layout_weight="2"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:gravity="right"
            android:padding="10dp" />
    </LinearLayout>


</LinearLayout>